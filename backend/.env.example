# SpeechLabs Backend Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys (Required)
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get your Deepgram API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Google OAuth Configuration (Optional - for user authentication)
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Flask Configuration
# Generate a secure secret key for production (e.g., using: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# For SQLite (default), leave as is. For PostgreSQL, use: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///speech_analysis.db

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# FFmpeg Configuration
# Path to FFmpeg executable. Use 'ffmpeg' if it's in your PATH, or provide full path
FFMPEG_PATH=ffmpeg
