# SpeechLabs Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# Development Server Configuration
DANGEROUSLY_DISABLE_HOST_CHECK=true
WDS_SOCKET_HOST=localhost
HOST=localhost
NODE_OPTIONS=--no-deprecation

# Backend API URL
# Change this to your backend URL in production
REACT_APP_API_URL=http://localhost:5000/api

# Deepgram API Key (Optional - for voice agent features)
# Only needed if using voice agent features in the frontend
REACT_APP_DEEPGRAM_API_KEY=your_deepgram_api_key_here
